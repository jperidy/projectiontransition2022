{
	"name": "projectiontransition2022",
	"version": "0.0.1",
	"scripts": {
		"dev": "concurrently \"vite dev --port 3001\" \"npm run start --prefix static_server\"",
		"build": "vite build",
		"start": "concurrently \"PORT=3001 node build\" \"npm run start --prefix static_server\"",
		"deploy:web": "PORT=3001 pm2 start build/index.js --name projectionTransition2022-web",
		"deploy": "npm run deploy:web && npm run deploy:static --prefix static_server",
		"undeploy:web": "pm2 stop projectionTransition2022-web",
		"undeploy": "npm run undeploy:web && npm run undeploy:static --prefix static_server",
		"restart": "npm run build && npm run undeploy && npm run deploy",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"sass": "node-sass -w --output-style compressed sass -o src "
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.18.9",
		"@babel/plugin-syntax-import-assertions": "^7.18.6",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.44.0",
		"vite": "^3.0.0"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-node": "^1.0.0-next.83",
		"axios": "^0.27.2",
		"bcryptjs": "^2.4.3",
		"bootstrap": "^5.2.0",
		"bootstrap-icons": "^1.9.1",
		"chart.js": "^3.8.0",
		"concurrently": "^7.3.0",
		"jsonwebtoken": "^8.5.1",
		"leaflet": "^1.8.0",
		"mongoose": "^6.4.6",
		"node-sass": "^7.0.1",
		"nodemailer": "^6.7.7",
		"nodemailer-express-handlebars": "^5.0.0",
		"path": "^0.12.7",
		"svelte-markdown": "^0.2.2"
	}
}
